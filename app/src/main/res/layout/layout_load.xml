        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/l1_i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程1，图1"/>

        <Button
            android:id="@+id/l1_i2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程1，图2"/>

        <Button
            android:id="@+id/l2_i4"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程2，视频4、5"/>

        <Button
            android:id="@+id/l2_i6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程2，图6"/>

        <Button
            android:id="@+id/l2_i10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程2，图10"/>
    </LinearLayout>
</ScrollView>